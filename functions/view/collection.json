            "type": "View?style.marginBottom=.75rem;style.display=grid;style.gridTemplateColumns=2fr 1fr 1fr;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "Text?class=left;label;text=Description;style.fontSize=1.4rem"
