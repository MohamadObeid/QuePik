{
    "file-name": "category",
    "type": "View?style.padding=2rem;data={}<<!value.data()",
    "controls": {
        "event": "load",
        "actions": "async.search?search.path=data/category.json;await.state.category=value.search.data?!state.category"
    },
    "children": [{
        "type": "View?class=flex-box;style.width=100%;style.marginBottom=2.5rem;value.data().id=category-++generate()<<!value.data().id",
        "children": [{
            "type": "View?class=flex-box?value.data().name",
            "children": [{
                "type": "Text?text=Edit;style.fontSize=1.8rem;fontWeight=500"
            }, {
                "type": "Text?text=value.data().name.capitalize();style.fontSize=1.8rem;style.fontWeight=500;style.margin=0 .5rem"
            }, {
                "type": "Text?text=Category;style.fontSize=1.8rem;fontWeight=500"
            }]
        }, {
            "type": "Text?text=Create New Category;style.fontSize=1.8rem;style.color=#444;style.fontWeight=500?!value.data().name"
        }, {
            "type": "View?class=flex-box;style.marginLeft=auto",
            "children": [{
                "type": "Icon?class=flex-box;icon.name=bi-three-dots;style.color=#116dff;style.fontSize=2.5rem;style.height=4rem;style.width=4rem;style.borderRadius=4rem;style.transition=all .2s;style.marginRight=1rem;style.after.backgroundColor=#eee;hoverable;actionlist"
            }, {
                "type": "Button?icon.name=bi-x-square;text=Cancel;style.marginRight=1rem",
                "controls": [{
                    "event": "click",
                    "actions": "setStyle::mini-window;remove>>220::global.mini-window-view.element.children.0.id?style.display=none>>200;style.opacity=0"
                }]
            }, {
                "type": "Button?icon.name=bi-check2-square;text=Save",
                "controls": [{
                    "event": "click",
                    "actions": "await.update::category-list-view;await.setStyle::mini-window;await.note;async.save?note=Category saved successfully!;save.path=data/category;save.data=value.data();await.state.category.findById().[value.data().id]=value.data();await.state.category-list-Data.findById().[value.data().id]=value.data();style.display=none>>200;style.opacity=0"
                }]
            }]
        }]
    }, {
        "type": "View?style.border=1px solid #eee;style.borderRadius=.5rem;style.padding=2rem;style.display=flex;style.flexDirection=column",
        "children": [{
            "type": "View?style.marginBottom=.75rem;style.display=grid;style.gridTemplateColumns=1fr 1fr 1fr 1fr 1fr;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "Text?class=left;label;text=Name;style.fontSize=1.4rem"
            }, {
                "type": "Text?class=left;label;text=Head Category;style.fontSize=1.4rem"
            }, {
                "type": "Text?class=left;label;text=Active;style.fontSize=1.4rem"
            }, {
                "type": "Text?class=left;label;text=category ID;style.fontSize=1.4rem"
            }, {
                "type": "Text?class=left;label;text=Creation Date;style.fontSize=1.4rem"
            }]
        }, {
            "type": "View?style.display=grid;style.marginBottom=3rem;style.gap=1rem",
            "children": [{
                "type": "View?style.display=grid;style.gridTemplateColumns=1fr 1fr 1fr 1fr 1fr;style.gap=1rem",
                "children": [{
                    "type": "Input?textarea;featured;clearable;style.backgroundColor=#f0f0f0;path=name"
                }, {
                    "type": "Input?textarea;featured;readonly;clearable;style.backgroundColor=#f0f0f0;path=head-category.name;droplist.items=const.[Category List>>readonly,state.category.map().name].flat()",
                    "controls": {
                        "watch": "value.data()>>1000?value.Data().category.id=state.category.clone().findByName().[value.data()].id"
                    }
                }, {
                    "type": "Input?textarea;featured;clearable;style.backgroundColor=#f0f0f0;path=active;data=true<<!value.data().active=undefined;droplist.items=[Status>>readonly,true,false]"
                }, {
                    "type": "Input?textarea;featured;readonly;style.backgroundColor=#f0f0f0;path=id"
                }, {
                    "type": "Input?textarea;featured;readonly;style.backgroundColor=#f0f0f0;value.data().creation-date=date().toDate()<<!value.data().creation-date;path=creation-date",
                    "controls": {
                        "event": "load?value.element.value=value.data().split().T.join(). "
                    }
                }]
            }]
        }, {
            "type": "Text?class=flex-start;text=Image;style.marginBottom=.7rem;style.fontSize=1.4rem"
        }, {
            "type": "View?style.display=grid;style.gap=1rem;style.marginBottom=3rem",
            "children": [{
                "type": "View?style.display=grid;style.gridTemplateColumns=1fr 1fr;style.gap=1rem;value.data().images=[]<<!value.data().images",
                "children": [{
                    "type": "View?class=flex-box;style.overflow=hidden;style.height=width/1.5;style.border=1px dashed #ccc;style.backgroundColor=#f0f0f0;style.borderRadius=1rem",
                    "children": [{
                        "type": "Image?src=value.data.image;path=image;fill"
                    }]
                }, {
                    "type": "View?style.display=grid;style.gridTemplateColumns=1fr 1fr;style.gap=1rem",
                    "children": [{
                        "type": "Input?id=img-uploader;featured;path=image;style.backgroundColor=#f0f0f0;style.height=width/1.5;style.justifyContent=center;input.type=file;input.accept=image;msg=Drop images here!;icon.name=bi-upload;style.flexDirection=column;icon.style.fontSize=2rem;icon.style.margin=0 0 .8rem 0;style.borderRadius=1rem",
                        "controls": [{
                            "event": "input>>200",
                            "actions": "await.fill::value.parent().parent().id;await.note;async.save?note=Image uploaded succefully!;save.data=state.file;save.path=image;await.value.data()=value.save.data.file-name;await.value.parent().prev().1stChild().element.src=value.data();await.value.element.innerHTML::img-uploader-msg=Reached maximum limit!<<value.data()?!value.data()"
                        }]
                    }]
                }]
            }]
        }, {
            "type": "View?style.marginBottom=.75rem;style.display=grid;style.gridTemplateColumns=2fr 2fr;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "Text?class=left;label;text=Description;style.fontSize=1.4rem"
            }, {
                "type": "Text?class=left;label;text=Note;style.fontSize=1.4rem"
            }]
        }, {
            "type": "View?style.display=grid;style.gap=1rem;style.gridTemplateColumns=2fr 2fr;style.gap=1rem;style.marginBottom=3rem",
            "children": [{
                "type": "Input?textarea;featured;duplicatable;style.backgroundColor=#f0f0f0;path=description;style.minHeight=10rem;input.style.alignSelf=flex-start;input.style.minHeight=100%"
            }, {
                "type": "Input?textarea;featured;duplicatable;style.backgroundColor=#f0f0f0;path=note;style.minHeight=10rem;input.style.alignSelf=flex-start;input.style.minHeight=100%"
            }]
        }]
    }]
}