{
    "class": "box-shadow",
    "type": "View?id=droplist",
    "style": {
        "transform": "scale(0.8)",
        "opacity": "0",
        "position": "fixed",
        "padding": "0.5rem",
        "minWidth": "15rem",
        "maxWidth": "20rem",
        "maxHeight": "25rem",
        "minHeight": "3rem",
        "overflowY": "auto",
        "borderRadius": "0.5rem",
        "backgroundColor": "#fff",
        "transition": "opacity 0.1s, transform 0.1s, max-height 0.2s",
        "pointerEvents": "none",
        "zIndex": "-1",
        "after": {
            "zIndex": "4",
            "transform": "scale(1)",
            "opacity": "1",
            "pointerEvents": "auto"
        }
    },
    "controls": [{
        "event": "mouseleave;click::body??state.droplist;!e.target.id.isChildOfId().state.droplist",
        "actions": "resetStyles>>200;blur>>200?state.droplist.delete()?!mouseenter;state.droplist;!e.target.id.isChildOfId().state.droplist"
    }]
}