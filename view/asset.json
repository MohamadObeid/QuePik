{
    "type": "View?t;style.padding=2rem",
    "actions": "setValue?value.Data={}?!value.Data",
    "children": [{
        "type": "View?tt;class=flex-box;style.width=100%;style.marginBottom=2.5rem",
        "children": [{
            "type": "View?class=flex-box",
            "children": [{
                "type": "Text?text=Edit",
                "style": { "fontSize": "1.8rem", "color": "#444", "fontWeight": "500"}
            }, {
                "type": "Text?text=value.data.name.0.name",
                "style": { "fontSize": "1.8rem", "color": "#444", "fontWeight": "500", "margin": "0 .5rem" }
            }]
        }, {
            "type": "View?class=flex-box;style.marginLeft=auto",
            "children": [{
                "type": "Icon?class=flex-box;icon.name=bi-three-dots;auto-style;actionlist",
                "style": {
                    "cursor": "pointer",
                    "color": "#116dff",
                    "fontSize": "2.5rem",
                    "height": "4rem",
                    "width": "4rem",
                    "borderRadius": "4rem",
                    "transition": "all 0.2s",
                    "marginRight": "1rem",
                    "after": { "backgroundColor": "#eee" }
                }
            }, {
                "type": "Button?icon.name=bi-x-square;text=Cancel;style.marginRight=1rem",
                "controls": [{
                    "event": "click",
                    "actions": "setStyle>>mini-window?style.display=none::200;style.opacity=0"
                }]
            }, {
                "type": "Button?icon.name=bi-check2-square;text=Save",
                "controls": [{
                    "event": "click",
                    "actions": "save;setStyle>>mini-window;update>>assets-data?state.asset[value.data.file-name]=value.Data;save=value.Data;style.display=none::200;style.opacity=0"
                }]
            }]
        }]
    }, {
        "type": "View",
        "style": {
            "border": "1px solid #eee",
            "borderRadius": "0.5rem",
            "padding": "1rem",
            "display": "flex",
            "flexDirection": "column"
        },
        "children": [{
            "type": "View?style.display=grid;style.gridTemplateColumns=1fr 1fr 1fr;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "View?class=flex-start-column",
                "children": [{
                    "type": "Label?text=Name;style.fontSize=1.4rem;style.marginBottom=.75rem"
                }, {
                    "type": "Input?featured;lang=en;style.backgroundColor=#f0f0f0;path=name;data=[]"
                }]
            }, {
                "type": "View?class=flex-start-column",
                "children": [{
                    "type": "Label?text=File Name;style.fontSize=1.4rem;style.marginBottom=.75rem"
                }, {
                    "type": "Input?style.backgroundColor=#f0f0f0;path=file-name"
                }]
            }]
        }, {
            "type": "View?style.marginTop=2rem",
            "children": [{
                "type": "View?class=flex-start-column",
                "children": [{
                    "type": "Label?text=Options;style.fontSize=1.4rem;style.marginBottom=.75rem"
                }, {
                    "type": "View?style.display=grid;style.gridTemplateColumns=1fr 1fr 1fr;style.width=100%;style.gap=1rem",
                    "children": [{
                        "type": "Input?featured;lang=en;style.backgroundColor=#f0f0f0;path=options;data=[]"
                    }]
                }]
            }]
        }]
    }]
}