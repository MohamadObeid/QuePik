{
    "file-name": "asset",
    "type": "View?style.padding=2rem;data={}<<!value.data",
    "children": [{
        "type": "View?class=flex-box;style.width=100%;style.marginBottom=2.5rem",
        "children": [{
            "type": "View?class=flex-box",
            "children": [{
                "type": "Text?text=Edit",
                "style": { "fontSize": "1.8rem", "color": "#444", "fontWeight": "500"}
            }, {
                "type": "Text?text=value.data.name.0.name<<value.data.name",
                "style": { "fontSize": "1.8rem", "color": "#444", "fontWeight": "500", "margin": "0 .5rem" }
            }]
        }, {
            "type": "View?class=flex-box;style.marginLeft=auto",
            "children": [{
                "type": "Icon?class=flex-box;icon.name=bi-three-dots;auto-style;actionlist",
                "style": {
                    "cursor": "pointer",
                    "color": "#116dff",
                    "fontSize": "2.5rem",
                    "height": "4rem",
                    "width": "4rem",
                    "borderRadius": "4rem",
                    "transition": "all 0.2s",
                    "marginRight": "1rem",
                    "after": { "backgroundColor": "#eee" }
                }
            }, {
                "type": "Button?icon.name=bi-x-square;text=Cancel;style.marginRight=1rem",
                "controls": [{
                    "event": "click",
                    "actions": "setStyle::mini-window?style.display=none>>200;style.opacity=0"
                }]
            }, {
                "type": "Button?icon.name=bi-check2-square;text=Save",
                "controls": [{
                    "event": "click",
                    "actions": "saveDb;setStyle::mini-window;update::assets-data?state.asset[value.data.file-name]=value.data;save=state[value.Data];style.display=none>>200;style.opacity=0"
                }]
            }]
        }]
    }, {
        "type": "View",
        "style": {
            "border": "1px solid #eee",
            "borderRadius": "0.5rem",
            "padding": "1rem",
            "display": "flex",
            "flexDirection": "column"
        },
        "children": [{
            "type": "View?style.marginBottom=2rem;style.display=grid;style.gridTemplateColumns=4fr 4fr 4fr;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "View?class=flex-start-column",
                "children": [{
                    "type": "Label?text=File Name;style.fontSize=1.4rem;style.marginBottom=.75rem"
                }, {
                    "type": "Input?featured;icon.name=description;icon.google;icon.outlined;style.backgroundColor=#f0f0f0;path=file-name"
                }]
            }, {
                "type": "View?class=flex-start-column",
                "children": [{
                    "type": "Label?text=Parent;style.fontSize=1.4rem;style.marginBottom=.75rem"
                }, {
                    "type": "Input?featured;icon.name=link;icon.google;icon.outlined;style.backgroundColor=#f0f0f0;path=parent;droplist.items=state.asset.entries.key"
                }]
            }]
        }, {
            "type": "View?style.marginBottom=.75rem;style.display=grid;style.gridTemplateColumns=4fr 6fr 3fr 2fr 2rem;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "Label?text=Name;style.fontSize=1.4rem;style.textAlign=left"
            }, {
                "type": "Label?text=Description;style.fontSize=1.4rem;style.textAlign=left"
            }, {
                "type": "Label?text=Icon;style.fontSize=1.4rem;style.textAlign=left"
            }, {
                "type": "Label?text=Type;style.fontSize=1.4rem;style.textAlign=left"
            }]
        }, {
            "type": "View?style.display=grid;style.gap=1rem",
            "children": [{
                "type": "View?style.display=grid;style.gridTemplateColumns=4fr 6fr 3fr 2fr 2rem;style.gap=1rem",
                "children": [{
                    "type": "View?style.display=grid;style.gap=1rem",
                    "children": [{
                        "type": "Input?featured;lang=en;icon=value.data.icon;style.backgroundColor=#f0f0f0;path=name"
                    }]
                }, {
                    "type": "Input?textarea;featured;!duplicatable;style.backgroundColor=#f0f0f0;path=description"
                }, {
                    "type": "Input?featured;google;!clearable;!removable;style.backgroundColor=#f0f0f0;path=icon"
                }, {
                    "type": "Input?featured;!removable;readonly;path=icon.type;droplist.items=[outlined,rounded,sharp,twoTone];style.display=flex;style.backgroundColor=#f0f0f0"
                }, {
                    "type": "Icon?class=flex-box;icon.name=bi-trash;auto-style;style.justifyContent=flex-end;style.after.color=red;style.cursor=pointer;style.fontSize=1.8rem",
                    "controls": {
                        "event": "click",
                        "actions": "remove::value.parent.id??value.parent.length>1"
                    }
                }]
            }]
        }, {
            "type": "View?style.marginTop=2rem;style.marginBottom=.75rem;style.display=grid;style.gridTemplateColumns=4fr 6fr 3fr 2fr 2rem;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "Label?text=Options;style.fontSize=1.4rem;style.textAlign=left"
            }, {
                "type": "Label?text=Description;style.fontSize=1.4rem;style.textAlign=left"
            }, {
                "type": "Label?text=Icon;style.fontSize=1.4rem;style.textAlign=left"
            }, {
                "type": "Label?text=Type;style.fontSize=1.4rem;style.textAlign=left"
            }]
        }, {
            "type": "View?style.display=grid;style.gap=1rem;style.width=100%",
            "children": [{
                "type": "View?style.display=grid;style.alignItems=center;style.gridTemplateColumns=4fr 6fr 3fr 2fr 2rem;style.gap=1rem;style.width=100%;path=options;data=[{}]<<!value.data.options",
                "children": [{
                    "type": "Input?featured;lang=en;icon=value.data.icon;style.backgroundColor=#f0f0f0;!duplicatable",
                    "controls": [{
                        "event": "keyup??e.key=Enter",
                        "actions": "duplicate::value.parent.id"
                    }]
                }, {
                    "type": "Input?textarea;featured;!duplicatable;style.backgroundColor=#f0f0f0;path=description"
                }, {
                    "type": "Input?featured;google;!clearable;!removable;style.backgroundColor=#f0f0f0;path=icon"
                }, {
                    "type": "Input?featured;!removable;readonly;path=icon.type;droplist.items=[outlined,rounded,sharp,twoTone];style.display=flex;style.backgroundColor=#f0f0f0"
                }, {
                    "type": "Icon?class=flex-box;icon.name=bi-trash;auto-style;style.justifyContent=flex-end;style.after.color=red;style.cursor=pointer;style.fontSize=1.8rem",
                    "controls": {
                        "event": "click",
                        "actions": "remove??value.parent.length>1?value.parent.id"
                    }
                }]
            }]
        }, {
            "type": "View?style.display=flex;style.alignItems=center;style.marginTop=3rem",
            "children": [{
                "type": "Icon?class=align-center;icon.name=bi-plus-circle-fill;style.fontSize=2rem;style.margin=0 1rem;style.cursor=pointer",
                "controls": [{
                    "event": "click",
                    "actions": "duplicate::value.parent.prev.1stChild.id"
                }]
            }, {
                "type": "Text?text=Add More Options;style.fontSize=1.4rem;style.color=#444"
            }]
        }]
    }]
}