{
    "file-name": "review-list",
    "type": "View?Data;state.review-list-grid-view-display=grid;state.review-list-table-view-display=none",
    "controls": {
        "actions": "await.update::review-list-view;async.search?search.path=data/review.json;await.state.review-list-Data=value.search.data;await.state.review=value.search.data" 
    },
    "children": [{
        "type": "View?class=flex-box;style.width=100%;style.marginBottom=2.5rem;style.justifyContent=space-between",
        "children": [{
            "type": "Text?text=Review List;style.fontSize=1.8rem;style.color=#444;style.fontWeight=500"
        }, {
            "type": "View?class=flex-box",
            "children": [{
                "type": "Button?text=Import;icon.name=bi-download;style.marginRight=1rem"
            }, {
                "type": "Button?text=Export;icon.name=bi-upload;style.marginRight=1rem"
            }, {
                "type": "Button?text=Add New Review;icon.name=bi-plus;style.marginRight=1rem;miniWindow.view=review"
            }]
        }]
    }, {
        "type": "View?style.padding=1rem;style.borderRadius=.5rem;style.border=1px solid #eee",
        "children": [{
            "type": "View?class=flex-box;style.paddingBottom=1rem;style.borderBottom=1px solid #eee;style.justifyContent=space-between",
            "children": [{
                "type": "Input?featured;!removable;!clearable;icon.name=bi-search;icon.style.fontSize=1.8rem;style.height=4rem;style.backgroundColor=#fff;style.border=1px solid #ddd;style.color=#666;style.borderRadius=.75rem;style.marginRight=1rem;style.maxWidth=50rem",
                "placeholder": "Search by id, description, user, provider, service...",
                "controls": {
                    "event": "keyup>>200??state.review-list-Data",
                    "actions": "await.update::global.review-list-view.1stChild().id<<global.review-list-view.1stChild().element.style.display=grid;await.update::global.review-list-view.2ndChild().2ndChild().id<<global.review-list-view.2ndChild().element.style.display=grid;async.filter?filter.backup=state.review.clone();filter.path=[id,service.name,user.name,time,description,provider.name];filter.Data=review-list-Data;filter.value=e.target.value"
                }
            }, {
                "type": "View?class=flex-box",
                "children": [{
                    "type": "Button?text=Sort;icon.name=bi-sort-alpha-down",
                    "controls": {
                        "event": "click??state.review-list-Data", 
                        "actions": "await.update::global.review-list-view.1stChild().id<<global.review-list-view.1stChild().element.style.display=grid;await.update::global.review-list-view.2ndChild().2ndChild().id<<global.review-list-view.2ndChild().element.style.display=grid;async.sort?sort.path=creation-date;sort.Data=review-list-Data"
                    }
                }, {
                    "type": "Button?text=View;icon.name=bi-list-ul",
                    "controls": {
                        "event": "click?await.state.review-list-grid-view-display=global.review-list-view.1stChild().element.style.display;await.state.review-list-table-view-display=global.review-list-view.2ndChild().element.style.display", 
                        "actions": [
                            "update::global.review-list-view.1stChild().id;setStyle::global.review-list-view.1stChild().id?style.display=none<<global.review-list-view.1stChild().element.style.display=grid;style.display=grid>>50<<global.review-list-view.1stChild().element.style.display=none",
                            "update::global.review-list-view.2ndChild().id;setStyle::global.review-list-view.2ndChild().id?style.display=none<<global.review-list-view.2ndChild().element.style.display=grid;style.display=grid>>50<<global.review-list-view.2ndChild().element.style.display=none"
                        ]
                    }
                }]
            }]
        }, {
            "type": "View?id=review-list-view;style.display=flex;style.flexDirection=column;style.width=100%",
            "children": [{
                "type": "View?style.display=state.review-list-grid-view-display;style.gap=1rem;style.gridTemplateColumns=1fr 1fr 1fr 1fr 1fr;style.marginTop=1rem;flicker",
                "children": [{
                    "type": "[View]?class=flex-box pointer;Data=review-list-Data;touchableOpacity;style.padding=2rem;style.flexDirection=column;style.borderRadius=.75rem;style.border=1px solid #ddd;style.minHeight=8rem;style.transition=border .1s;style.after.border=1px solid #ee384e?state.review-list-Data;state.review-list-Data.length()!=0",
                    "controls": {
                        "event": "load",
                        "actions": "toControls?hoverable.id=[value.id,value.children().0.id,value.children().1.id,value.children().2.id,value.children().3.id,value.children().4.id,value.children().5.id];miniWindow.view=review"
                    },
                    "children": [{
                        "type": "Text?text=value.data.user.name;style.flexWrap=wrap;style.marginBottom=.7rem;style.fontSize=1.3rem;style.color=#666;style.after.color=#ee384e;style.transition=color .1s"
                    }, {
                        "type": "Text?text=value.data.service.name<<value.data.service;text=value.data.provider.name<<value.data.provider;style.flexWrap=wrap;style.marginBottom=.7rem;style.fontSize=1.3rem;style.color=#666;style.after.color=#ee384e;style.transition=color .1s"
                    }]
                }]
            }, {
                "type": "View?style.display=state.review-list-table-view-display;style.gridTemplateColumns=1fr;style.gap=1px;flicker",
                "children": [{
                    "type": "View?style.display=grid;style.alignItems=center;style.gridTemplateColumns=5rem 1fr 2fr 1fr 1fr 1fr;style.minHeight=5.5rem;style.borderBottom=1px solid #eee;style.padding=0 1rem;style.gap=1rem",
                    "children": [{
                        "type": "Text?text=Active;style.fontSize=1.4rem;style.fontWeight=bolder;style.cursor=pointer;style.width=fit-content",
                        "controls": {
                            "event": "click",
                            "actions": "await.update::value.parent().next().id;sort?sort.path=active;sort.Data=review-list-Data?state.review-list-Data"
                        }
                    }, {
                        "type": "Text?text=User;style.fontSize=1.4rem;style.fontWeight=bolder;style.cursor=pointer;style.width=fit-content",
                        "controls": {
                            "event": "click",
                            "actions": "await.update::value.parent().next().id;sort?sort.path=user.name;sort.Data=review-list-Data?state.review-list-Data"
                        }
                    }, {
                        "type": "Text?text=Description;style.fontSize=1.4rem;style.fontWeight=bolder;style.cursor=pointer;style.width=fit-content",
                        "controls": {
                            "event": "click",
                            "actions": "await.update::value.parent().next().id;sort?sort.path=description;sort.Data=review-list-Data?state.review-list-Data"
                        }
                    }, {
                        "type": "Text?text=Service;style.fontSize=1.4rem;style.fontWeight=bolder;style.cursor=pointer;style.width=fit-content",
                        "controls": {
                            "event": "click", 
                            "actions": "await.update::value.parent().next().id;sort?sort.path=service.name;sort.Data=review-list-Data?state.review-list-Data"
                        }
                    }, {
                        "type": "Text?text=Provider;style.fontSize=1.4rem;style.fontWeight=bolder;style.cursor=pointer;style.width=fit-content",
                        "controls": {
                            "event": "click", 
                            "actions": "await.update::value.parent().next().id;sort?sort.path=provider.name;sort.Data=review-list-Data?state.review-list-Data"
                        }
                    }, {
                        "type": "Text?text=Actions;style.fontSize=1.4rem;style.fontWeight=bolder;style.width=100%;style.textAlign=right;style.paddingRight=2rem"
                    }]
                }, {
                    "type": "View?style.display=grid;style.gridTemplateColumns=1fr;flicker",
                    "children": [{
                        "type": "[View]?style.after.backgroundColor=#f0f0f0;style.display=grid;style.alignItems=center;style.gridTemplateColumns=5rem 1fr 2fr 1fr 1fr 1fr;style.minHeight=5.5rem;Data=review-list-Data;data=state.review-list-data;style.borderBottom=1px solid #eee;style.padding=0 1rem;style.gap=1rem;hoverable?state.review-list-Data;state.review-list-Data.length()!=0",
                        "children": [{
                            "type": "Icon?icon.name=bi-circle<<!value.data.active;icon.name=bi-circle-fill<<value.data.active;style.fontSize=1.4rem;style.color=lime<<value.data.active;style.color=#ddd<<!value.data.active;style.textAlign=center"
                        }, {
                            "type": "Text?class=dots;text=value.data.user.name;style.fontSize=1.4rem"
                        }, {
                            "type": "Text?class=dots;text=value.data.description;style.fontSize=1.4rem"
                        }, {
                            "type": "Text?class=dots;text=value.data.service.name<<value.data.service;text=''<<!value.data.service;style.fontSize=1.4rem"
                        }, {
                            "type": "Text?class=dots;text=value.data.provider.name<<value.data.provider;text=''<<!value.data.provider;style.fontSize=1.4rem"
                        }, {
                            "type": "View?class=flex-box;style.justifyContent=flex-end;style.width=100%;style.marginRight=1rem",
                            "children": [{
                                "type": "Icon?class=flex-box pointer;style.color=#666;style.after.color=#116dff;style.borderRadius=3rem;style.marginRight=.5rem;style.fontSize=2.2rem;style.height=4rem;style.width=4rem;style.transition=all .2s;style.after.backgroundColor=#fff;icon.name=edit;icon.google;icon.outlined;hoverable;miniWindow.view=review"
                            }, {
                                "type": "Icon?class=flex-box pointer;style.color=#666;style.after.color=red;style.borderRadius=3rem;style.fontSize=2.2rem;style.height=4rem;style.width=4rem;style.transition=all .2s;style.after.backgroundColor=#fff;icon.name=delete;icon.google;icon.outlined;hoverable"
                            }]
                        }]
                    }]
                }]
            }]
        }]
    }]
}