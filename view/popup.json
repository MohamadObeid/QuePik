{
    "class": "box-shadow",
    "type": "View?id=popup",
    "style": {
        "transform": "scale(0.8)",
        "opacity": "0",
        "position": "fixed",
        "padding": "1rem",
        "overflowY": "auto",
        "borderRadius": "0.5rem",
        "border": "1px solid #aaa",
        "backgroundColor": "#fff",
        "transition": "opacity 0.1s, transform 0.1s, max-height 0.2s",
        "pointerEvents": "none",
        "zIndex": "-1",
        "after": {
            "zIndex": "4",
            "transform": "scale(1)",
            "opacity": "1",
            "pointerEvents": "auto"
        }
    },
    "children": [{
        "type": "Text?id=popup-text;text=Do you confirm/?;style.fontSize=1.4rem;style.padding=.5rem"
    }, {
        "type": "View?class=flex-box;style.justifyContent=space-evenly",
        "children": [{
            "type": "Button?id=popup-cancel;text=Cancel;style.marginRight=.5rem;style.padding=.5rem;icon.name=bi-x;icon.style.fontSize=2rem",
            "controls": {
                "event": "click",
                "actions": "resetStyles"
            }
        }, {
            "type": "Button?id=popup-confirm;text=Confirm;style.padding=.5rem;icon.name=bi-check;icon.style.fontSize=2rem"
        }]
    }],
    "controls": [{
        "event": "mouseleave;click::body??state.popup;!e.target.id.isChildOfId().[state.popup]",
        "actions": "resetStyles>>200;blur>>200?state.popup.delete()?!mouseenter;state.popup;!e.target.id.isChildOfId().[state.popup]"
    }]
}