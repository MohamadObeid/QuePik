{
    "type": "View?id=miniWindow;class=flex-box",
    "style": {
        "position": "absolute",
        "top": "0",
        "left": "0",
        "display": "none",
        "height": "100%",
        "width": "100%",
        "backgroundColor": "#00000050",
        "opacity": "0",
        "transition": "opacity 0.2s",
        "zIndex": "2"
    },
    "children": [{
        "type": "View?style.height=70%;style.width=60%;style.overflowY=auto;style.borderRadius=.5rem;style.backgroundColor=#fff",
        "children": { "type": "View?id=mini-window-view" },
        "controls": [{
            "event": "mouseenter?state.mini-window-view-mouseenter"
        }, {
            "event": "mouseleave?state.mini-window-view-mouseenter=false"
        }]
    }],
    "controls": [{
        "event": "mousedown",
        "actions": "setStyle?style.display=none>>200;style.opacity=0?!state.mini-window-view-mouseenter"
    }]
}